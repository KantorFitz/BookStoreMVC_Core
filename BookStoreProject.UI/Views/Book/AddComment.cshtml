@model BookStoreProject.UI.UseCases.AddComment.AddCommentCommand

@{
    Layout = null;
}

<form method="post">
    @Html.HiddenFor(x=>x.BookId)
    
    <div class="form-group">
        <label asp-for="Author">Nick</label>
        <input asp-for="Author" type="text" class="form-control"/>
        <span asp-validation-for="Author" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Content">Zawartość</label>
        <input asp-for="Content" type="text" class="form-control"/>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-outline-primary float-right">Zapisz</button>

</form>