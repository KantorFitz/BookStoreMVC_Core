@model IEnumerable<BookStoreProject.UI.UseCases.Models.BookDto>;

@{
    ViewData["Title"] = "Home Page";
}

<h1>Książki</h1>

<div>
    <table class="table">
        <thead class="tab-pane">
        <tr>
            <th></th>
            <th>
                <a class="btn btn-outline-success float-right" asp-action="Add">Dodaj nowy</a>
            </th>
        </tr>
        </thead>

        <tbody class="tab-content">
        <div class="row align-items-center">
            @for (var i = 0; i < Model.Count(); i++)
            {
                @if (i > 0 && i % 5 == 0)
                {
                    @:</div><div class="row"></div>
                }
                <div class="float-left col-2">
                    @if (Model.ElementAt(i).ImageName is null)
                    {
                        <div class="float-left">
                            @Model.ElementAt(i).Title
                            <div class="align-items-center">
                                <a class="text-warning btn-link btn" asp-action="Index" asp-controller="Book" asp-route-id="@Model.ElementAt(i).BookId">
                                    @{
                                        <img src="Images/EmptyImagePlaceholder.png" width="110px" class="bg-transparent"/>
                                    }
                                </a>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="float-left">
                            @Model.ElementAt(i).Title
                            <div class="align-items-center">
                                <a class="text-warning btn-link btn" asp-action="Index" asp-controller="Book" asp-route-id="@Model.ElementAt(i).BookId">
                                    @{
                                        <img src="Images/@Model.ElementAt(i).ImageName" width="150px" class="bg-transparent"/>
                                    }
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
        </tbody>
    </table>
</div>